# Django Environment Variables
SECRET_KEY=django-insecure-change-this-in-production-with-a-real-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB Configuration
MONGO_DB_NAME=dropout_prediction
MONGO_DB_URI=mongodb://localhost:27017
MONGO_DB_USERNAME=
MONGO_DB_PASSWORD=
MONGO_DB_AUTH_SOURCE=admin

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@dropoutprediction.com

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Production Settings
DJANGO_SETTINGS_MODULE=dropout_prediction.settings